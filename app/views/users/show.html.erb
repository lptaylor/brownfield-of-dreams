<section class="dashboard-main">
  <h1> <%= @user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= @user.first_name  %> <%= @user.last_name %> </li>
    <li> <%= @user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
    <% if @user.token %>
    <div class="github">
      <h3>Github</h3>
      <% if @user.repositories != nil %>
        <% @user.repositories.each do |repo| %>
          <div id="repository-<%= repo.id %>">
            <%= link_to repo.name, repo.html_url %>
          </div>
          <% end %>
      <% else %>
        <h4>You don't have any repositories available</h4>
      <%end %>
      <% if @user.followers != nil %>
        <% @user.followers.each do |follower| %>
          <div id="followers-<%= follower.id %>">
            <%= link_to follower.handle, follower.html_url %>
            <%= link_to "Follow This User" %>
          </div>
        <% end %>
      <% else %>
        <h4>You currently don't have any followers</h4>
      <% end %>
      <% if @user.following != nil %>
        <% @user.following.each do |followed| %>
          <div id="following-<%= followed.id %>">
            <%= link_to followed.handle, followed.html_url %>
            <%= link_to "Follow This User" %>
          </div>
        <% end %>
      <% else %>
        <h4>You are not currently following anyone</h4>
      <% end %>
    <% else %>
      <%= button_to 'Sign in with GitHub', git_hub_login_path %>
    <% end %>
  </div>
</section>
